@model IEnumerable<e_commerce.Models.M_Category>

<h2>Index</h2>

<p>
    <a href="@Url.Action("Create", "M_Category")" class="btn btn-lg btn-success"> Create New </a>

</p>
<table class="table">
    <tr>
        <th>
            Category Name
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Category_Name)
            </td>
            <td>
                <a href="@Url.Action("Edit", "M_Category", new { id=item.Category_Id })" class="btn btn-warning glyphicon glyphicon-edit"></a> |
                <a href="@Url.Action("Details", "M_Category", new { id=item.Category_Id })" class="btn btn-success glyphicon glyphicon-book"></a> |
                <a href="@Url.Action("Delete", "M_Category", new { id=item.Category_Id })" class="btn btn-danger glyphicon glyphicon-trash"></a>
            </td>
        </tr>
     }

</table>
