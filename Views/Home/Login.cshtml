
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layoutuser.cshtml";
}

@using (Html.BeginForm("Login", "Home", FormMethod.Post))
{
<section style="width:auto; height:50vh;">
    <table style="width:50%; margin:4rem auto 0; border:none">
        <tr><td style="text-align:center; color:palevioletred; font-size:larger" colspan="2"> Admin Login Menu </td></tr>

        <tr><td style="width:20%; font-weight:bold"> EMAIL: </td>     <td style="width:80%"><input type="text" name="Admin_Email" style="width:100%" />    </td> </tr>
        <tr><td style="width: 20%; font-weight: bold"> PASSWORD: </td> <td style="width:80%"><input type="text" name="Admin_Password" style="width:100%" /> </td> </tr>

        <tr><td style="text-align:right" colspan="2"> <input type="submit" value="SUBMIT" /></td></tr>
        <tr><td style="text-align:center; color: red; font-size: larger" colspan="2"> @ViewBag.Message </td></tr>
    </table>
</section>
}